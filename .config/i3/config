# vim: filetype=i3config

# This config file will use environment variables such as $BROWSER and $TERMINAL.

# Exec on startup
exec_always --no-startup-id picom -b
exec_always --no-startup-id feh --bg-fill --randomize ~/Pictures/Wallpapers/*
exec_always --no-startup-id zsh $HOME/.config/polybar/launch.sh
exec_always --no-startup-id autotiling

#
# #---Basic Definitions---# #
smart_gaps on
smart_borders on
set $inner_gaps 10
set $outer_gaps 0
set $mod Mod4
set $alt Mod1

# --- System Commands
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $netrefresh --no-startup-id sudo -A systemctl restart NetworkManager
set $lock i3lock
set $suspend sudo systemctl suspend
set $hibernate sudo -A systemctl hibernate

# --- Other GUI apps
set $bluetooth blueman-manager
set $mail mailspring
set $slack slack
set $spotify spotify
set $files nautilus
set $browser firefox
set $zoom zoom-client
set $intellij intellij-idea-community

# --- TUI apps -- should have generic names
set $term --no-startup-id alacritty
set $ranger ranger
set $htop htop
set $nmtui nmtui
set $rofi-dmenu "rofi -show drun -run-shell-command '{terminal} -e \\" {cmd}; read -n 1 -s\\"'"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# #---Gaps---# #
for_window [class="^.*"] border pixel 2
gaps inner $inner_gaps
gaps outer $outer_gaps

# #---Basic Bindings---# #
bindsym $mod+Return 		         exec $term
# bindsym $mod+Shift+Return	       exec $term --working-directory  $(xcwd)

# TODO: For some reason, the lock takes too long to "kick in"
bindsym $alt+Ctrl+Delete		        exec --no-startup-id $suspend

# space TODO: Something here
# bindsym $mod+space 			            exec --no-startup-id rofi-menu 


# #---Letter Key Bindings---# #
bindsym $mod+q			            [con_id="__focused__" instance="^(?!dropdown_).*$"] kill
bindsym $mod+Shift+q		        [con_id="__focused__" instance="^(?!dropdown_).*$"] exec --no-startup-id kill -9 `xdotool getwindowfocus getwindowpid`

# w
# bindsym $mod+w 			            exec --no-startup-id brave
bindsym $mod+w                      exec --no-startup-id $browser


# e
bindsym $mod+e 			            exec --no-startup-id $mail

# r
bindsym $mod+r 			            exec --no-startup-id $term -e $ranger
# bindsym $mod+Shift+r		        exec --no-startup-id winresize

# t
bindsym $mod+t 			            exec --no-startup-id $term -e $htop
# ??
bindsym $mod+Shift+t            focus mode_toggle

# y
bindsym $mod+y			            exec --no-startup-id flameshot gui -p ~/Pictures/screenshots
bindsym $mod+Shift+y		        exec --no-startup-id flameshot full -p ~/Pictures/screenshots

# u
bindsym $mod+u                  [urgent=latest] focus

# i
# bindsym $mod+i                  fullscreen disable; floating enable; resize set 500 300; sticky enable; move position 4610 1130
bindsym $mod+i                      exec --no-startup-id $intellij

# o
# bindsym $mod+o			        exec --no-startup-id $term -e nvim ~/repos

# a
bindsym $mod+a		              exec $term -e alsamixer

# s
# FIXME
# bindsym $mod+$alt+s        			    sticky toggle
bindsym $mod+Shift+s			      split toggle
bindsym $mod+s                      exec --no-startup-id $slack

# d
# bindsym $mod+d                  exec --no-startup-id i3-dmenu-desktop
bindsym $mod+d                  exec --no-startup-id $rofi-dmenu

# f
bindsym $mod+f			            fullscreen toggle
bindsym $mod+Shift+f 	          floating toggle

# g
bindsym $mod+g		              gaps inner current set $inner_gaps; gaps outer current set $outer_gaps
bindsym $mod+Shift+g		        gaps inner current set 0; gaps outer current set 0

# h
bindsym $mod+h			            focus left
bindsym $mod+Shift+h		        move left 30
# bindsym $mod+Ctrl+h		          move workspace to output left

# j
bindsym $mod+j			            focus down
bindsym $mod+Shift+j		        move down 30
# bindsym $mod+Ctrl+j		          move workspace to output down

# k
bindsym $mod+k			            focus up
bindsym $mod+Shift+k		        move up 30
# bindsym $mod+Ctrl+k		          move workspace to output up

# l
bindsym $mod+l			            focus right
bindsym $mod+Shift+l		        move right 30
# bindsym $mod+Ctrl+l		          move workspace to output right
bindsym $alt+Ctrl+l               exec --no-startup-id $lock

# bindsym $mod+semicolon 			    exec --no-startup-id skippy-xd

# z
# bindsym $mod+z			            exec --no-startup-id $zoom

# x
bindsym $mod+x 			            exec --no-startup-id $reboot
bindsym $mod+Shift+x		        exec --no-startup-id $shutdown

# c
# bindsym $mod+c			            exec --no-startup-id picom -b
# bindsym $mod+Shift+c		        exec --no-startup-id killall picom

# v
# bindsym $mod+v			            exec --no-startup-id $term -e nvim

# b
bindsym $mod+b                      exec $files
bindsym $mod+Shift+b	            exec --no-startup-id feh --bg-fill --randomize ~/Pictures/Wallpapers/*

# n
# bindsym $mod+n			            exec --no-startup-id kill -s USR1 $(pidof deadd-notification-center)
bindsym $mod+Shift+n			    exec --no-startup-id $netrefresh

# m
bindsym $mod+m		              exec --no-startup-id $spotify


# #---Workspace Bindings---# #
bindsym $mod+Tab		            exec --no-startup-id rofi -show window
bindsym $alt+Tab    		      workspace back_and_forth
bindsym $mod+$alt+Right		      workspace next
bindsym $mod+$alt+Left		      workspace prev
bindsym $mod+apostrophe		      split horizontal ;; exec $term
bindsym $mod+slash		          split vertical ;; exec $term
bindsym $mod+Shift+slash	      kill

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# Assign Workspaces:
assign [class="firefox"] $ws6
for_window [class="Slack"] move to workspace $ws8
for_window [class="Mailspring"] move to workspace $ws7
for_window [class="Spotify"] move to workspace $ws9

for_window [class="Gnome-control-center"] floating enable; resize set 800 600; move position center
# FIXME: This does not work
for_window [class="Gnome-system-monitor"] floating enable; resize set 800 600; move position center

# Assing autofloat
# for_window [title=".*Emulator.*"] floating enable

# switch to workspace
bindsym $mod+1		workspace $ws1
bindsym $mod+2		workspace $ws2
bindsym $mod+3		workspace $ws3
bindsym $mod+4		workspace $ws4
bindsym $mod+5		workspace $ws5
bindsym $mod+6		workspace $ws6
bindsym $mod+7		workspace $ws7
bindsym $mod+8		workspace $ws8
bindsym $mod+9		workspace $ws9

# move focused container to workspace
bindsym $mod+Shift+1	move container to workspace $ws1
bindsym $mod+Shift+2	move container to workspace $ws2
bindsym $mod+Shift+3	move container to workspace $ws3
bindsym $mod+Shift+4	move container to workspace $ws4
bindsym $mod+Shift+5	move container to workspace $ws5
bindsym $mod+Shift+6	move container to workspace $ws6
bindsym $mod+Shift+7	move container to workspace $ws7
bindsym $mod+Shift+8	move container to workspace $ws8
bindsym $mod+Shift+9	move container to workspace $ws9
bindsym $mod+Shift+0	move container to workspace $ws10

# for_window [title="GIMP Startup"] move workspace $ws5
# for_window [class="Gimp"] move workspace $ws5
# for_window [window_role="GtkFileChooserDialog"] resize set 800 600
# for_window [window_role="GtkFileChooserDialog"] move position center


# #---Function Buttons---# #
bindsym $mod+F1		        restart
bindsym $mod+F12	        exec $term -e $nmtui

# #---Arrow Keys---# #
bindsym $mod+Left		      focus left
bindsym $mod+Shift+Left   resize shrink width 5 px or 5 ppt
bindsym $mod+Ctrl+Left		move workspace to output right
bindsym $mod+Down		      focus down
bindsym $mod+Shift+Down   resize shrink height 5 px or 5 ppt
bindsym $mod+Ctrl+Down		move workspace to output up
bindsym $mod+Up			      focus up
bindsym $mod+Shift+Up     resize grow height 5 px or 5 ppt
bindsym $mod+Ctrl+Up		  move workspace to output down
bindsym $mod+Right 		    focus right
bindsym $mod+Shift+Right  resize grow width 5 px or 5 ppt
bindsym $mod+Ctrl+Right		move workspace to output left

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% #decrease sound volume
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# FIXME
# Screen brightness keys
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Window borders
client.focused          #4c7899 #285577 #ffffff #2e9ef4   #abb2bf
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

